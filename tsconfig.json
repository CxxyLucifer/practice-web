{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": false,
        "target": "es2016"
    },
    "exclude": [
        "node_modules"
    ]
}